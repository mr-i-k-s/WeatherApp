<Window 
    x:Class="WeatherApp.MVVM.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WeatherApp.MVVM.Views"
    mc:Ignorable="d"
    Title="Settings" 
    WindowStartupLocation="CenterOwner"
    Height="225" 
    Width="400">

    <Grid>
        <DockPanel
            LastChildFill="False"
            Margin="10">

            <DockPanel 
                DockPanel.Dock="Top">

                <TextBlock
                    DockPanel.Dock="Left"
                    Margin="0,0,10,0"
                    Text="ApiKey:"
                    FontSize="14"
                    FontWeight="DemiBold"/>

                <TextBox
                    DockPanel.Dock="Left"
                    Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            </DockPanel>

            <DockPanel 
                DockPanel.Dock="Top"
                LastChildFill="False">

                <TextBlock
                    DockPanel.Dock="Right"> 
                            
                    <Hyperlink 
                        Foreground="Blue"
                        TextDecorations="Underline"
                        Command="{Binding CreateNewApiCommand}"
                        CommandParameter="https://home.openweathermap.org/api_keys">
                                
                        <TextBlock
                            Opacity="0.5"
                            Text="Create new Api Key"
                            FontSize="13"/>
                                          
                    </Hyperlink>
                            
                </TextBlock>

            </DockPanel>

            <DockPanel 
                DockPanel.Dock="Top"
                LastChildFill="False">

                <DockPanel
                    DockPanel.Dock="Top"
                    LastChildFill="False">

                    <TextBlock
                        DockPanel.Dock="Left"
                        Text="Unit:"
                        FontSize="14"
                        FontWeight="DemiBold"/>

                    <RadioButton
                        DockPanel.Dock="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Content="Metric [°C]"
                        IsChecked="{Binding IsChecked_Metric, UpdateSourceTrigger=PropertyChanged}"/>

                    <RadioButton
                        DockPanel.Dock="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Content="Imperial [°F]"
                        IsChecked="{Binding IsChecked_Imperial, UpdateSourceTrigger=PropertyChanged}"/>

                    <RadioButton
                        DockPanel.Dock="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Content="SI [K]"
                        IsChecked="{Binding IsChecked_Standard, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>

            </DockPanel>

            <DockPanel 
                DockPanel.Dock="Bottom"
                LastChildFill="False">

                <Button
                    DockPanel.Dock="Right"
                    Content="Save"
                    Width="100"
                    Command="{Binding SaveCommand}"/>

            </DockPanel>

        </DockPanel>

    </Grid>

</Window>

